model Group {
  id Int @id @default(autoincrement())
  name String 
  description String?

  workPlaceId Int
  workPlace WorkPlace @relation(fields: [workPlaceId], references: [id])
}

model WorkPlace {
  id Int @id @default(autoincrement())
  
  users User[]

  groups Group[]
}